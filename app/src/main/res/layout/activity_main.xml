<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="50sp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="40sp"
        android:singleLine="true"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:gravity="bottom">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/ActionButton"
                android:id="@+id/ac_btn"
                android:text="AC">
            </TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/l_btn"
                android:text="(">
            </TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/r_btn"
                android:text=")">
            </TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/slash_btn"
                android:text="/">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_1"
                android:text="1">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_2"
                android:text="2">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_3"
                android:text="3">
            </TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/mult_btn"
                android:text="*">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_4"
                android:text="4">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_5"
                android:text="5">

            </TextView>

            <TextView
                android:id="@+id/btn_6"
                style="@style/NumberButton"
                android:text="6"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:visibility="visible"></TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/add_btn"
                android:text="+">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_7"
                android:text="7">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_8"
                android:text="8">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_9"
                android:text="9">
            </TextView>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/min_btn"
                android:text="-">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/NumberButton"
                android:id="@+id/dot_btn"
                android:text=".">
            </TextView>
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_0"
                android:text="0">
            </TextView>
            <ImageView
                style="@style/NumberButton"
                android:id="@+id/back_btn"
                android:src="@drawable/backspace"
                android:scaleType="center"/>
            <TextView
                style="@style/ActionButton"
                android:id="@+id/equal_btn"
                android:text="=">
            </TextView>
        </LinearLayout>

        </LinearLayout>
</LinearLayout>